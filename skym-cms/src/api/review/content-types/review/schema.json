{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 144
    },
    "category": {
      "type": "enumeration",
      "default": "other",
      "enum": [
        "Therapy",
        "Consultation",
        "Training",
        "Coaching",
        "Workshops",
        "Other"
      ]
    },
    "rating": {
      "type": "integer",
      "default": 4,
      "min": 0,
      "max": 5
    },
    "comment": {
      "type": "richtext",
      "maxLength": 500
    },
    "reviewer_name": {
      "type": "string",
      "maxLength": 75,
      "required": true
    },
    "reviewer_email": {
      "type": "email",
      "require": true
    },
    "reviewer_phone": {
      "type": "string",
      "maxLength": 14,
      "required": true,
      "regex": "^\\+?[1-9][0-9]{7,14}$"
    },
    "profession": {
      "type": "string",
      "maxLength": 65
    },
    "review_status": {
      "type": "enumeration",
      "default": "pending",
      "enum": ["pending", "approved", "rejected"],
      "private": true
    },
    "internal_note": {
      "type": "richtext",
      "minLength": 256,
      "private": true
    }
  }
}
